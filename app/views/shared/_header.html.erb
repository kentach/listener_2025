<header class="lp-header">
  <div class="logo-area">
    <%= link_to root_path, class: "logo-link" do %>
      <span class="logo-text">LISTENER</span>
    <% end %>
  </div>

  <!-- ハンバーガーボタン -->
  <button class="hamburger" id="hamburger-btn" aria-expanded="false" aria-label="メニューを開く">
    <span></span>
    <span></span>
    <span></span>
  </button>

  <!-- ハンバーガーメニュー -->
 <nav class="hamburger-menu" id="hamburger-menu">
  <ul>
    <li>
      <i class="bi bi-house-door me-2"></i>
      <%= link_to "ホーム", root_path %>
    </li>

    <li>
      <i class="bi bi-file-text me-2"></i>
      <%= link_to "利用規約", "#" %>
    </li>

    <li>
      <i class="bi bi-question-circle me-2"></i>
      <%= link_to "よくある質問", "#" %>
    </li>

    <% if user_signed_in? %>
    <li>
      <i class="bi bi-person-circle me-2"></i>
      <%= link_to "ユーザー名・英検級の変更", edit_profile_user_path %>
    </li>

    <li>
      <i class="bi bi-person-circle me-2"></i>
      <%= link_to "Eメール・パスワードの変更", edit_user_registration_path %>
    </li>

      <li class="text-danger">
        <i class="bi bi-box-arrow-right me-2"></i>
        <%= link_to "ログアウト",
                    destroy_user_session_path,
                    data: { turbo_method: :delete } %>
      </li>
    <% end %>
  </ul>
</nav>


  <!-- メニューオーバーレイ -->
  <div id="menu-overlay" class="menu-overlay"></div>
</header>