    <%= link_to root_path, 
        class: "tab-item d-flex flex-column align-items-center mx-3 #{current_page?(root_path) ? 'active' : ''}" do %>
      <i class="bi bi-headphones fs-4 mb-1"></i>
      <span>リスニング</span>
    <% end %>

    <%= link_to favorites_path, 
        class: "tab-item d-flex flex-column align-items-center mx-3 #{current_page?(favorites_path) ? 'active' : ''}" do %>
