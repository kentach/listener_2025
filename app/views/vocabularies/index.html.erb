<section class="level-list-section">
  <h2 class="section-title">英検級を選択</h2>

  <div class="level-list-wrapper">
    <% level_colors = {
      "準1級" => "#f61010ff",  # 赤系
      "2級" => "#fc8200ff",    # オレンジ系
      "準2級" => "#fec804ff",   # 黄色系
      "準2級プラス" => "#23e343ff", # 緑系
      "3級" => "#2a99f4ff",     # 青系
      "4級" => "#5a28efff",     # 紫系
      "5級" => "#ec5576ff"      # ピンク系
    } %>

    <% ["準1級", "2級", "準2級", "準2級プラス", "3級", "4級", "5級"].each do |level| %>
      <div class="level-card" style="background-color: <%= level_colors[level] %>;">
        <%= link_to level, level_vocabularies_path(level: level), class: "level-link" %>
      </div>
    <% end %>
  </div>
</section>

<%= render "shared/navigation_tab" %>

<style>
.level-list-section {
  padding: 20px 10px;
  text-align: center;
}

.section-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 20px;
  color: #333;
}

/* 縦並び用ラッパー */
.level-list-wrapper {
  display: flex;
  flex-direction: column; /* 縦並び */
  gap: 16px; /* カード間のスペース */
  align-items: center; /* 中央揃え */
}

/* カード本体 */
.level-card {
  width: 90%;
  max-width: 300px;
  height: 60px;
  border-radius: 12px;
  box-shadow: 0 6px 15px rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 18px;
  cursor: pointer;
  transition: transform 0.2s;
}

.level-card:hover {
  transform: translateY(-2px);
  filter: brightness(110%);
}

.level-link {
  display: block;
  width: 100%;
  height: 100%;
  line-height: 60px;
  text-decoration: none;
  color: #fff;
  text-align: center;
  font-weight: bold;
}

/* レスポンシブ調整 */
@media (max-width: 480px) {
  .level-card {
    width: 95%;
    height: 50px;
    font-size: 16px;
    line-height: 50px;
  }

  .section-title {
    font-size: 20px;
  }
}
</style>
