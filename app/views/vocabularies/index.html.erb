<section class="level-list-section">
  <h2 class="section-title">英検級を選択</h2>

  <div class="level-list-wrapper">
    <% level_colors = {
      "準1級" => "#04921aff",   # 落ち着いた赤
      "2級" => "#05bdddff",     # 落ち着いたオレンジ
      "準2級" => "#e89613ff",   # 落ち着いた黄色
      "準2級プラス" => "#0f95deff", # 落ち着いた緑
      "3級" => "#ffcf40ff;",      # 落ち着いた青
      "4級" => "#fc77e4ce",      # 落ち着いた紫
      "5級" => "#5353da"       # 落ち着いたピンク
    } %>

    <% ["準1級", "2級", "準2級", "準2級プラス", "3級", "4級", "5級"].each do |level| %>
      <div class="level-card" style="background-color: <%= level_colors[level] %>;">
        <%= link_to level, level_vocabularies_path(level: level), class: "level-link" %>
      </div>
    <% end %>
  </div>
</section>


<%= render "shared/navigation_tab" %>

<style>
.level-list-section {
  padding: 20px 10px;
  text-align: center;
}

.section-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 20px;
  color: #222; /* 少し濃くして読みやすく */
}

/* 縦並び用ラッパー */
.level-list-wrapper {
  display: flex;
  flex-direction: column;
  gap: 16px;
  align-items: center;
  margin-top: 20px;
}

.level-card {
  width: 90%;
  max-width: 300px;
  height: 60px;
  border-radius: 12px;
  box-shadow: 0 6px 15px rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
}

.level-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.15);
}

.level-link {
  display: block;
  width: 100%;
  height: 100%;
  line-height: 60px;
  text-decoration: none;
  color: #fff;
  font-weight: bold;
  text-align: center;
}


/* レスポンシブ調整 */
@media (max-width: 480px) {
  .level-card {
    width: 95%;
    height: 50px;
    font-size: 16px;
    line-height: 50px;
  }

  .section-title {
    font-size: 20px;
  }

  .level-list-wrapper {
    gap: 16px;
  }
}

</style>
