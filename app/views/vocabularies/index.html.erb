<section class="level-list-section">
  <h2 class="section-title">英検級を選択</h2>

  <div class="level-list-wrapper">
    <% level_colors = {
      "準1級（開発中）" => "#d9534f",   # 落ち着いた赤
      "2級（開発中）" => "#f0ad4e",     # 落ち着いたオレンジ
      "準2級（開発中）" => "#f7e967",   # 落ち着いた黄色
      "準2級プラス（開発中）" => "#5cb85c", # 落ち着いた緑
      "3級" => "#5bc0de",      # 落ち着いた青
      "4級" => "#9966cc",      # 落ち着いた紫
      "5級" => "#e56fa1"       # 落ち着いたピンク
    } %>

    <% ["準1級（開発中）", "2級（開発中）", "準2級（開発中）", "準2級プラス（開発中）", "3級", "4級", "5級"].each do |level| %>
      <div class="level-card" style="background-color: <%= level_colors[level] %>;">
        <%= link_to level, level_vocabularies_path(level: level), class: "level-link" %>
      </div>
    <% end %>
  </div>
</section>

<%= render "shared/navigation_tab" %>

<style>
/* セクション全体 */
.level-list-section {
  padding: 20px 10px;
  text-align: center;
}

/* タイトル */
.section-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 20px;
  color: #222;
}

/* カードラッパー（縦並び） */
.level-list-wrapper {
  display: flex;
  flex-direction: column;
  gap: 16px;
  align-items: center;
  margin-top: 20px;
}

/* カード本体 */
.level-card {
  width: 90%;
  max-width: 300px;
  min-height: 60px;  /* 高さ固定ではなく最小高さ */
  padding: 0 10px;
  border-radius: 12px;
  box-shadow: 0 6px 15px rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
}

.level-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.15);
}

/* リンク */
.level-link {
  display: block;
  width: 100%;
  text-decoration: none;
  color: #fff;
  font-weight: bold;
  text-align: center;
  font-size: 18px;
  line-height: 1.5;
}

/* スマホレスポンシブ */
@media (max-width: 480px) {
  .level-card {
    width: 95%;
    min-height: 50px;
    padding: 0 8px;
  }

  .level-link {
    font-size: 16px;
    line-height: 1.4;
  }

  .section-title {
    font-size: 20px;
  }

  .level-list-wrapper {
    gap: 12px;
  }
}
</style>
