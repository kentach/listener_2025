<div class="container d-flex justify-content-center py-5">
  <div class="card shadow-sm p-4 rounded-4"
       style="max-width: 420px; width: 100%;">

    <h2 class="text-center mb-4 fw-bold">
      <i class="bi bi-person-circle me-1"></i>
      プロフィール編集
    </h2>

    <%= form_with model: current_user,
                  url: update_profile_user_path,
                  method: :patch,
                  local: true do |f| %>

      <div class="mb-3">
        <%= f.label :name, "名前", class: "form-label fw-semibold" %>
        <%= f.text_field :name,
              class: "form-control rounded-3",
              placeholder: "名前を入力してください" %>
      </div>

      <div class="mb-4">
        <%= f.label :eiken_level, "英検級", class: "form-label fw-semibold" %>
        <%= f.select :eiken_level,
              [
                ["まだ取得していない"],
                ["英検5級"], ["英検4級"], ["英検3級"],
                ["英検準2級"], ["英検準2プラス級"],
                ["英検2級"], ["英検準1級"], ["英検1級"]
              ],
              { include_blank: "選択してください" },
              class: "form-select rounded-3" %>
      </div>

      <div class="d-grid">
        <%= f.submit "プロフィールを更新",
              class: "btn btn-primary rounded-pill fw-bold" %>
      </div>

    <% end %>

  </div>
</div>
