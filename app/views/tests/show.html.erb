<div id="questions">
  <% @vocabularies.each_with_index do |vocab, index| %>
    <div
      class="question-row"
      data-index="<%= index %>"
      data-answer="<%= vocab.japanese %>"
      data-english="<%= vocab.english %>"
      style="<%= index == 0 ? '' : 'display:none;' %>">

      <!-- „Çø„Ç§„Éû„ÉºÔºàÊúÄ‰∏äÈÉ®Ôºâ -->
      <div class="timer-wrapper">
        <span class="timer-label">Time</span>
        <div class="timer-bar">
          <div class="timer-fill"></div>
        </div>
      </div>

      <!-- Ëã±Ë™û„Ç´„Éº„ÉâÔºà„Çø„ÉÉ„Éó„ÅßÂÜçÁîüÔºâ -->
      <div class="english-card tap-to-play">
        <div class="question-number"><%= index + 1 %></div>
        <div class="question-text"><%= vocab.english %></div>
        <div class="tap-hint">üîä „Çø„ÉÉ„Éó„Åó„Å¶„ÇÇ„ÅÜ‰∏ÄÂ∫¶ËÅû„Åè</div>
      </div>

      <!-- ÊÑèÂë≥Ë°®Á§∫ -->
      <button type="button" class="show-choices-btn">
        ÊÑèÂë≥„ÇíË°®Á§∫
      </button>

      <!-- ÈÅ∏ÊäûËÇ¢ -->
      <div class="choices" style="display:none;">
        <% @choices[vocab.id].each do |choice| %>
          <label class="choice-item">
            <input type="radio" name="q-<%= index %>" value="<%= choice %>">
            <span><%= choice %></span>
          </label>
        <% end %>
      </div>

      <!-- Ê≠£Ë™§ -->
      <div class="result-message" style="display:none;"></div>

      <!-- Ê¨°„Å∏ -->
      <button type="button" class="next-btn" style="display:none;">
        Ê¨°„Å∏ ‚ñ∂
      </button>

    </div>
  <% end %>
</div>



<!-- =========================
     CSS
========================= -->
<style>
#questions {
  max-width: 520px;
  margin: 0 auto;
  padding: 16px;
}

/* ===== „Çø„Ç§„Éû„Éº ===== */
.timer-wrapper {
  margin-bottom: 14px;
}

.timer-label {
  font-size: 12px;
  color: #666;
}

.timer-bar {
  height: 6px;
  background: #e0e0e0;
  border-radius: 3px;
  overflow: hidden;
}

.timer-fill {
  height: 100%;
  width: 100%;
  background: linear-gradient(90deg, #4caf50, #81c784);
  transition: width 1s linear;
}

/* ===== Ëã±Ë™û„Ç´„Éº„Éâ ===== */
.english-card {
  background: #fff;
  border-radius: 20px;
  padding: 30px 20px;
  text-align: center;
  box-shadow: 0 10px 24px rgba(0,0,0,0.15);
  margin-bottom: 20px;
  cursor: pointer;
}

.question-number {
  font-size: 14px;
  color: #888;
  margin-bottom: 8px;
}

.question-text {
  font-size: 30px;
  font-weight: 700;
  letter-spacing: 0.5px;
  line-height: 1.4;
}

.tap-hint {
  margin-top: 10px;
  font-size: 13px;
  color: #555;
}

/* ===== „Éú„Çø„É≥ ===== */
.show-choices-btn {
  width: 100%;
  padding: 14px;
  margin-bottom: 14px;
  border-radius: 14px;
  border: 1px solid #333;
  background: #fafafa;
  font-size: 16px;
  font-weight: 600;
}

/* ===== ÈÅ∏ÊäûËÇ¢ ===== */
.choices {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.choice-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px;
  border-radius: 14px;
  border: 1px solid #333;
  background: #fff;
  font-size: 16px;
}

/* ===== Ê≠£Ë™§ ===== */
.result-message {
  margin-top: 16px;
  padding: 14px;
  border-radius: 14px;
  font-size: 16px;
  text-align: center;
}

.result-correct {
  background: #e8f5e9;
  color: #2e7d32;
}

.result-wrong {
  background: #ffebee;
  color: #c62828;
}

/* ===== Ê¨°„Å∏ ===== */
.next-btn {
  margin-top: 18px;
  padding: 14px;
  width: 100%;
  border-radius: 14px;
  background: #f0740f;
  color: #fff;
  font-size: 16px;
  border: none;
}

/* „Çπ„Éû„Éõ */
@media (max-width: 600px) {
  .question-text {
    font-size: 26px;
  }
}

</style>

<!-- =========================
     JavaScript
========================= -->
<script>
document.addEventListener("turbo:load", () => {
  const rows = document.querySelectorAll(".question-row");
  const LIMIT = 5;
  let timer;

  const speak = (text) => {
    speechSynthesis.cancel();
    const u = new SpeechSynthesisUtterance(text);
    u.lang = "en-US";
    u.rate = 0.9;
    speechSynthesis.speak(u);
  };

  const startTimer = (row) => {
    let time = LIMIT;
    const fill = row.querySelector(".timer-fill");
    fill.style.width = "100%";

    timer = setInterval(() => {
      time--;
      fill.style.width = (time / LIMIT * 100) + "%";
      if (time <= 0) {
        clearInterval(timer);
        showWrong(row);
      }
    }, 1000);
  };

  const showCorrect = (row) => {
    const msg = row.querySelector(".result-message");
    msg.textContent = "‚≠ï Ê≠£Ëß£ÔºÅ";
    msg.className = "result-message result-correct";
    msg.style.display = "block";
    row.querySelector(".next-btn").style.display = "block";
  };

  const showWrong = (row) => {
    const msg = row.querySelector(".result-message");
    msg.innerHTML = `‚ùå ‰∏çÊ≠£Ëß£<br>Ê≠£Ëß£Ôºö${row.dataset.answer}`;
    msg.className = "result-message result-wrong";
    msg.style.display = "block";
  };

  // ÂàùÂõû
  if (rows.length > 0) {
    speak(rows[0].dataset.english);
    startTimer(rows[0]);
  }

  rows.forEach((row, index) => {
    const correct = row.dataset.answer;

    // Ëã±Ë™û„Ç´„Éº„Éâ„Çí„Çø„ÉÉ„Éó„ÅßÂÜçÁîü
    row.querySelector(".english-card").addEventListener("click", () => {
      speak(row.dataset.english);
    });

    row.querySelector(".show-choices-btn").addEventListener("click", e => {
      row.querySelector(".choices").style.display = "flex";
      e.target.style.display = "none";
    });

    row.querySelectorAll("input[type=radio]").forEach(input => {
      input.addEventListener("change", () => {
        clearInterval(timer);
        input.value === correct ? showCorrect(row) : showWrong(row);
      });
    });

    row.querySelector(".next-btn").addEventListener("click", () => {
      clearInterval(timer);
      row.style.display = "none";
      const next = rows[index + 1];
      if (next) {
        next.style.display = "block";
        speak(next.dataset.english);
        startTimer(next);
      } else {
        alert("„ÉÜ„Çπ„ÉàÁµÇ‰∫ÜÔºÅ");
      }
    });
  });
});


</script>
