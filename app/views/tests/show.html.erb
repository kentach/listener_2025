<style>
#questions {
  max-width: 520px;
  margin: 0 auto;
  padding: 20px 16px;
}

.english-card {
  background: #fff;
  border-radius: 18px;
  padding: 28px 20px;
  text-align: center;
  box-shadow: 0 8px 20px rgba(0,0,0,0.12);
  margin-bottom: 18px;
}

.question-text {
  font-size: 28px;
  font-weight: 700;
}

.timer-bar {
  height: 6px;
  background: #e0e0e0;
  border-radius: 3px;
  overflow: hidden;
}

.timer-fill {
  height: 100%;
  width: 100%;
  background: linear-gradient(90deg, #fb7c0d, #ff6600);
  transition: width 1s linear;
}

.show-choices-btn,
.choice-item,
.next-btn {
  width: 100%;
  padding: 14px;
  border-radius: 14px;
  font-size: 16px;
}

.result-correct {
  background: #e8f5e9;
  color: #2e7d32;
}

.result-wrong {
  background: #ffebee;
  color: #c62828;
}

/* é¸æŠè‚¢ã‚³ãƒ³ãƒ†ãƒŠ */
.choices {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-top: 12px;
}

/* ãƒ©ã‚¸ã‚ªã¯éè¡¨ç¤º */
.choice-item input {
  display: none;
}

/* é¸æŠè‚¢ã‚«ãƒ¼ãƒ‰ */
.choice-item {
  display: block;
  padding: 16px;
  border-radius: 16px;
  border: 2px solid #ddd;
  background: #ffffff;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 4px 10px rgba(0,0,0,0.08);
  cursor: pointer;
  transition: all 0.2s ease;
}

/* ãƒ›ãƒãƒ¼ï¼ˆPCï¼‰ */
.choice-item:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 14px rgba(0,0,0,0.12);
}

/* é¸æŠä¸­ */
.choice-item input:checked + span {
  display: block;
  color: #fff;
  background: #f0740f;
  padding: 16px;
  border-radius: 14px;
}

/* span ã‚’ãƒ–ãƒ­ãƒƒã‚¯åŒ– */
.choice-item span {
  display: block;
}

</style>

<script>
document.addEventListener("turbo:load", () => {
  const rows = document.querySelectorAll(".question-row");
  const LIMIT = 5;
  let timer;
  let score = 0;

  const speak = (text) => {
    speechSynthesis.cancel();
    const u = new SpeechSynthesisUtterance(text);
    u.lang = "en-US";
    u.rate = 0.9;
    speechSynthesis.speak(u);
  };

  const startTimer = (row) => {
    let time = LIMIT;
    const fill = row.querySelector(".timer-fill");
    fill.style.width = "100%";

    timer = setInterval(() => {
      time--;
      fill.style.width = (time / LIMIT * 100) + "%";

      if (time <= 0) {
        clearInterval(timer);
        showWrong(row);
      }
    }, 1000);
  };

  const showCorrect = (row) => {
    score++;
    const msg = row.querySelector(".result-message");
    msg.textContent = "â­• æ­£è§£ï¼";
    msg.className = "result-message result-correct";
    msg.style.display = "block";
    row.querySelector(".next-btn").style.display = "block";
  };

  const showWrong = (row) => {
    const msg = row.querySelector(".result-message");
    msg.innerHTML = `âŒ ä¸æ­£è§£<br>æ­£è§£ï¼š${row.dataset.answer}`;
    msg.className = "result-message result-wrong";
    msg.style.display = "block";
    speak(row.dataset.answer);
    row.querySelector(".next-btn").style.display = "block";
  };

  if (rows.length > 0) {
    speak(rows[0].dataset.english);
    startTimer(rows[0]);
  }

  rows.forEach((row, index) => {
    const correct = row.dataset.answer;
    const nextBtn = row.querySelector(".next-btn");

    row.querySelector(".show-choices-btn").addEventListener("click", () => {
      row.querySelector(".choices").style.display = "flex";
      row.querySelector(".show-choices-btn").style.display = "none";
    });

    row.querySelectorAll("input[type=radio]").forEach(input => {
      input.addEventListener("change", () => {
        clearInterval(timer);
        input.value === correct ? showCorrect(row) : showWrong(row);
      });
    });

    nextBtn.addEventListener("click", () => {
      clearInterval(timer);
      row.style.display = "none";

      const next = rows[index + 1];
      if (next) {
        next.style.display = "block";
        speak(next.dataset.english);
        startTimer(next);
      } else {
        const testId = document.getElementById("questions").dataset.testId;
        window.location.href = `/tests/${testId}/result?score=${score}&total=${rows.length}`;
      }
    });
  });
});
</script>
