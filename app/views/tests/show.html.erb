<div class="container" style="max-width: 600px; margin-top: 30px;">
  <%= link_to "Ôºú ÂçòË™û„É™„Çπ„Éà„Å∏Êàª„Çã", level_vocabularies_path(level: @test.level), class: "text-dark text-decoration-none" %>
</div>

<div id="questions" data-test-id="<%= @test.id %>">
  <% @questions.each_with_index do |q, index| %>
    <% vocab = q.vocabulary %>

    <div
      class="question-row"
      data-index="<%= index %>"
      data-answer="<%= vocab.japanese %>"
      data-english="<%= vocab.english %>"
      style="<%= index == 0 ? '' : 'display:none;' %>">

      <!-- Ëã±Ë™û„Ç´„Éº„Éâ -->
      <div class="english-card tap-to-play">
        <div class="question-number">Q<%= index + 1 %></div>
        <div class="question-text"><%= vocab.english %></div>
        <div class="tap-hint">üîä „Çø„ÉÉ„Éó„Åó„Å¶„ÇÇ„ÅÜ‰∏ÄÂ∫¶ËÅû„Åè</div>
      </div>

      <!-- „Çø„Ç§„Éû„Éº -->
      <div class="timer-wrapper">
        <div class="timer-bar">
          <div class="timer-fill"></div>
        </div>
      </div>

      <!-- ÊÑèÂë≥Ë°®Á§∫ -->
      <button type="button" class="show-choices-btn">
        ÊÑèÂë≥„ÇíË°®Á§∫
      </button>

      <!-- ÈÅ∏ÊäûËÇ¢ -->
      <div class="choices" style="display:none;">
        <% @choices[vocab.id].each do |choice| %>
          <label class="choice-item">
            <input type="radio" name="q-<%= q.id %>" value="<%= choice %>">
            <span><%= choice %></span>
          </label>
        <% end %>
      </div>

      <!-- Ê≠£Ë™§„É°„ÉÉ„Çª„Éº„Ç∏ -->
      <div class="result-message" style="display:none;"></div>
    </div>
  <% end %>
</div>

<style>
#questions {
  max-width: 480px;
  margin: 0 auto;
  padding: 16px;
}

.english-card {
  background: #fff;
  border-radius: 16px;
  padding: 24px 16px;
  text-align: center;
  box-shadow: 0 6px 16px rgba(0,0,0,0.12);
  margin-bottom: 12px;
  transition: background 0.5s ease;
}

.question-text {
  font-size: 22px;
  font-weight: 700;
}

.tap-hint {
  font-size: 14px;
  color: #555;
  margin-top: 8px;
}

.timer-wrapper {
  margin: 8px 0 16px;
}

.timer-bar {
  height: 6px;
  background: #e0e0e0;
  border-radius: 3px;
  overflow: hidden;
}

.timer-fill {
  height: 100%;
  width: 100%;
  background: linear-gradient(90deg, #fb7c0d, #ff6600);
  transition: width 1s linear;
}

.show-choices-btn,
.choice-item {
  width: 100%;
  padding: 12px;
  border-radius: 14px;
  font-size: 16px;
  margin-top: 8px;
}

.choices {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.choice-item input {
  display: none;
}

.choice-item {
  background: #fff;
  border: 2px solid #ddd;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 3px 8px rgba(0,0,0,0.08);
  cursor: pointer;
  transition: all 0.2s ease;
}

.choice-item:hover {
  transform: translateY(-1px);
  box-shadow: 0 5px 10px rgba(0,0,0,0.12);
}

.choice-item input:checked + span {
  display: block;
  color: #fff;
  background: #f0740f;
  padding: 12px;
  border-radius: 12px;
}

.result-message {
  margin-top: 8px;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
}

.result-correct {
  color: #2e7d32;
}

.result-wrong {
  color: #c62828;
}

.timer-fill {
  height: 6px;
  width: 100%;
  background: #66bb6a; /* ÂàùÊúü„ÅØÁ∑ë */
  transition: width 1s linear, background 0.5s linear;
}

</style>

<script>
document.addEventListener("turbo:load", () => {
  const rows = document.querySelectorAll(".question-row");
  const LIMIT = 10; // ÁßíÊï∞
  let timer;
  let results = [];

  const speak = text => {
    speechSynthesis.cancel();
    const u = new SpeechSynthesisUtterance(text);
    u.lang = "en-US";
    u.rate = 0.9;
    speechSynthesis.speak(u);
  };

  const markCorrect = row => {
    row.querySelector(".english-card").style.background = "#e8f5e9"; // Á∑ë
    const msg = row.querySelector(".result-message");
    msg.textContent = "‚≠ï Ê≠£Ëß£ÔºÅ";
    msg.className = "result-message result-correct";
    msg.style.display = "block";
    results[row.dataset.index] = { english: row.dataset.english, japanese: row.dataset.answer, correct: true };
  };

  const markWrong = row => {
    row.querySelector(".english-card").style.background = "#ffebee"; // Ëµ§
    const msg = row.querySelector(".result-message");
    msg.innerHTML = `‚ùå ‰∏çÊ≠£Ëß£<br>Ê≠£Ëß£Ôºö${row.dataset.answer}`;
    msg.className = "result-message result-wrong";
    msg.style.display = "block";
    speak(row.dataset.answer);
    results[row.dataset.index] = { english: row.dataset.english, japanese: row.dataset.answer, correct: false };
  };

  const nextQuestion = row => {
    clearInterval(timer);
    row.style.display = "none";
    row.querySelector(".english-card").style.background = "#fff"; // „É™„Çª„ÉÉ„Éà
    const index = parseInt(row.dataset.index);
    const next = rows[index + 1];
    if (next) {
      next.style.display = "block";
      speak(next.dataset.english);
      startTimer(next);
    } else {
      localStorage.setItem("testResults", JSON.stringify(results));
      const testId = document.getElementById("questions").dataset.testId;
      window.location.href = `/tests/${testId}/result`;
    }
  };

 const startTimer = row => {
  let time = LIMIT;
  const fill = row.querySelector(".timer-fill");
  fill.style.width = "100%";

  timer = setInterval(() => {
    time--;
    fill.style.width = (time / LIMIT * 100) + "%";

    // Ëâ≤„ÇíÊÆã„ÇäÊôÇÈñì„Å´Âøú„Åò„Å¶Â§âÊõ¥ÔºàÁ∑ë‚ÜíÈªÑ‚ÜíËµ§Ôºâ
    const ratio = time / LIMIT;
    if (ratio > 0.6) {
      fill.style.background = "#66bb6a"; // Á∑ë
    } else if (ratio > 0.3) {
      fill.style.background = "#ffeb3b"; // ÈªÑ
    } else {
      fill.style.background = "#ef5350"; // Ëµ§
    }

    if (time <= 0) {
      clearInterval(timer);
      markWrong(row);
      setTimeout(() => nextQuestion(row), 700); // „Çø„Ç§„É†„Ç¢„Ç¶„ÉàÂæå0.7Áßí„ÅßÊ¨°„Å∏
    }
  }, 1000);
};


  if (rows.length > 0) startTimer(rows[0]);

  rows.forEach(row => {
    const correct = row.dataset.answer;

    row.querySelector(".show-choices-btn").addEventListener("click", () => {
      row.querySelector(".choices").style.display = "flex";
      row.querySelector(".show-choices-btn").style.display = "none";
    });

    row.querySelectorAll("input[type=radio]").forEach(input => {
      input.addEventListener("change", () => {
        clearInterval(timer);
        input.value === correct ? markCorrect(row) : markWrong(row);
        setTimeout(() => nextQuestion(row), 700); // ÈÅ∏ÊäûÂæå0.7Áßí„ÅßÊ¨°„Å∏
      });
    });

    row.querySelector(".english-card").addEventListener("click", () => {
      speak(row.dataset.english);
    });
  });
});
</script>
