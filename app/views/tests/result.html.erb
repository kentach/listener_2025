<h2 class="test-title">英検 - <%= @test.series %> シリーズ テスト 結果</h2>
<p class="score">
  正解数: <%= @test.score %> / <%= @test.test_questions.count %> |
  合格: <%= @test.passed ? "✅ 合格" : "❌ 不合格" %>
</p>

<div class="results-container">
  <% @test.test_questions.includes(:vocabulary).each_with_index do |q, i| %>
    <% user_answer = q.user_answer || "" %>
    <% correct_answer = @test.question_language == "english" ? q.vocabulary.japanese : q.vocabulary.english %>
    <div class="result-card <%= user_answer.strip.downcase == correct_answer.strip.downcase ? 'correct' : 'wrong' %>">
      <div class="card-header">
        <span class="question-number">Q<%= i + 1 %></span>
        <span class="result-icon"><%= user_answer.strip.downcase == correct_answer.strip.downcase ? "✅" : "❌" %></span>
      </div>
      <div class="card-body">
        <p class="question-text"><strong>問題:</strong> <%= @test.question_language == "english" ? q.vocabulary.english : q.vocabulary.japanese %></p>
        <p class="user-answer"><strong>あなたの解答:</strong> <%= user_answer %></p>
        <p class="correct-answer"><strong>正解:</strong> <%= correct_answer %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="container" style="max-width: 600px; margin-top: 30px;">
  <%= link_to "＜もう一度挑戦する", level_vocabularies_path(level: @test.level), class: "text-dark text-decoration-none btn-back" %>
</div>



<style>
.test-title {
  text-align: center;
  margin-top: 20px;
  font-size: 22px;
  font-weight: bold;
}

.score {
  text-align: center;
  margin-bottom: 20px;
  font-size: 16px;
}

/* 結果カード全体 */
.results-container {
  display: flex;
  flex-direction: column;
  gap: 16px;
  max-width: 800px;
  margin: 0 auto 40px auto;
}

/* 個別カード */
.result-card {
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  border-left: 6px solid #2196F3;
  background-color: #fff;
  transition: transform 0.1s;
}
.result-card.correct { border-left-color: #4CAF50; }
.result-card.wrong { border-left-color: #F44336; }
.result-card:hover { transform: translateY(-2px); }

.card-header {
  display: flex;
  justify-content: space-between;
  padding: 8px 16px;
  background-color: #f0f0f0;
  font-weight: bold;
}

.card-body {
  padding: 12px 16px;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.question-text, .user-answer, .correct-answer {
  margin: 0;
  font-size: 14px;
}

/* 戻るボタン */
.btn-back {
  display: block;
  width: fit-content;
  margin: 0 auto 40px auto;
  padding: 10px 20px;
  background-color: #ccc;
  color: #333;
  border-radius: 8px;
  text-decoration: none;
  text-align: center;
  font-weight: bold;
}
.btn-back:hover { background-color: #aaa; }



.btn-retry {
  display: block;
  margin: 20px auto;
  padding: 10px 20px;
  background-color: #FF9800;
  color: #fff;
  font-weight: bold;
  border-radius: 8px;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: background-color 0.2s;
}
.btn-retry:hover { background-color: #F57C00; }


/* レスポンシブ対応 */
@media (max-width: 768px) {
  .card-body {
    font-size: 13px;
  }
  .card-header {
    font-size: 14px;
  }
}


</style>
