<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  const swiper = new Swiper('.card-swiper', {
    slidesPerView: 'auto',
    spaceBetween: 16,
    loop: true,
    freeMode: true,               // ← continuous autoplay には freeMode を ON にする
    freeModeMomentum: false,      // ← 慣性停止をOFF（止まらない）
    autoplay: {
      delay: 0,                   // ← “0” にすると止まらず流れ続ける
      disableOnInteraction: false,
    },
    speed: 2000,                  // ← 流れるスピード（数値を大きくするとゆっくり）
  });
</script>

